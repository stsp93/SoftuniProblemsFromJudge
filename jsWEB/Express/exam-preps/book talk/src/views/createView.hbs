   <section class="create-form-container">

        <form method="post">
            <h3>Create Book Review</h3>
            <label>Title</label>
            <input type="text" name="title" class="box" id="" value="{{input.title}}">
            <label>Author</label>
            <input type="text" name="author" class="box" id="" value="{{input.author}}">
            <label>Genre</label>
            <input type="text" name="genre" class="box" id="" value="{{input.genre}}">
            <label>Stars</label>
            <input type="number" name="stars" class="box" id="" value="{{input.stars}}">
            <label>Image</label>
            <input type="text" name="imageUrl" class="box" id="" value="{{input.imageUrl}}">
            <label>Review</label>
            <textarea class="box" name="review">{{input.review}}</textarea>
            <input type="submit" value="Create" class="btn">
        </form>
    </section>