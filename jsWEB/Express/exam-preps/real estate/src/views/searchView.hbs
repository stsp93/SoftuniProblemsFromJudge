<form class="search" method="GET">
  <input type="search" name="query" placeholder="Search here..." />
  <button type="submit">Search</button>
</form>
<section id="find-section">

  <!-- If there are any matching matches from the search, show each of them -->
  {{#each results}}
    <div class="card">
      <h3>{{name}}</h3>
      <p>{{description}}</p>
      <div class="cta-container"><a href="/housing/{{_id}}" class="det-link">Details</a></div>
      <div class="card_circle"><img src="{{imageUrl}}" /></div>

    </div>
  {{else}}
    <!-- If there are no search matches, show: -->
    <div class="no-data-listing">
      <p class="no-offer">No match was found for the submitted type...</p>
    </div>
  {{/each}}
</section>