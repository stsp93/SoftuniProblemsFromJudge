<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Job Ads</title>

    <!-- Do not forget to change the path to the css file -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>

    <div class="box">

      <!-- In case of error, you should display div with class "error-box" -->
      <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if error}}
        <div class="error-box">
          <p>{{{error}}}</p>
        </div>
      {{/if}}

      <header class="header">
        <article class="header-logo">
          <!-- Do not forget to change the path to the image -->
          <img src="/img/logo.png" />
        </article>
        <nav class="header-nav">
          <ul class="header-nav-list">

            <li class="header-nav-list-item {{#if home}}active{{/if}}">
              <a href="/" class="header-nav-list-item-link {{#if home}}active{{/if}}">Home Page</a>
            </li>
            <li class="header-nav-list-item {{#if catalog}}active{{/if}}">
              <a href="/catalog" class="header-nav-list-item-link {{#if catalog}}active{{/if}}">All ads</a>
            </li>
            <!-- Logged users -->
            {{#if user}}
              <li class="header-nav-list-item {{#if create}}active{{/if}}">
                <a href="/ad/create" class="header-nav-list-item-link {{#if create}}active{{/if}}">Create Ad</a>
              </li>
              <li class="header-nav-list-item {{#if search}}active{{/if}}">
                <a
                  href="/ad/search"
                  class="header-nav-list-item-link {{#if search}}active{{/if}}"
                >Search</a>
              </li>
              <li class="header-nav-list-item">
                <a
                  href="/user/logout"
                  class="header-nav-list-item-link"
                >Logout</a>
              </li>
            {{else}}
              <!-- Guest users -->
              <li class="header-nav-list-item {{#if register}}active{{/if}}">
                <a
                  href="/user/register"
                  class="header-nav-list-item-link {{#if register}}active{{/if}}"
                >Register</a>
              </li>
              <li class="header-nav-list-item {{#if login}}active{{/if}}">
                <a
                  href="/user/login"
                  class="header-nav-list-item-link {{#if login}}active{{/if}}"
                >Login</a>
              </li>
            {{/if}}
          </ul>
        </nav>
      </header>

      <main>
        {{{body}}}
      </main>

      <footer>
        <p>Â©Js Back-End Final Exam 2022</p>
      </footer>
    </div>

  </body>

</html>