      <section id="viewAddhotel">
            <h2>Add new hotel</h2>
            <form id="formAddhotel" method="POST">
                <label for="hotel">Hotel name:</label>
                <input type="text" id="hotel" name="hotel" placeholder="Hotel name" value="{{input.name}}">
                <label for="city">City:</label>
                <input type="text" id="city" name="city" placeholder="City" value="{{input.city}}">
                <label for="free-rooms">Free rooms:</label>
                <input type="number" id="free-rooms" name="free-rooms" placeholder="Free rooms" value="{{input.freeRooms}}">
                <label for="imgUrl">Image:</label>
                <input type="text" id="imgUrl" name="imgUrl" placeholder="https://" value="{{input.imageUrl}}">

                <input type="submit" class="create" value="Add">
            </form>
        </section>