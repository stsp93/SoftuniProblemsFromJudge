<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>BookingUni</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>

    <div id="container">
      <div>
        {{#if loading}}
        <div class="notification loadingBox">
          Loading â€¦
        </div>
        {{/if}}
        {{#if info}}
        <div class="notification infoBox">
          <span>Info</span>
        </div>
         {{/if}}
        {{#if error}}
          <div class="notification errorBox">
            <span>{{{error}}}</span>
          </div>
        {{/if}}
      </div>

      {{#if user}}
        <nav>
          <div class="left-container">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/hotel/add">Add +</a></li>
            </ul>
          </div>
          <div class="right-container">
            <a href="/profile" class="log-out">{{user}}</a>
            <a href="/user/logout" class="log-out">Logout</a>
          </div>
        </nav>
      {{else}}

        <nav>
          <div class="left-container">
            <ul>
              <li><a href="/">Home</a></li>
              <li><a href="/user/login">Login</a></li>
              <li><a href="/user/register">Register</a></li>
            </ul>
          </div>
        </nav>
      {{/if}}

      {{{body}}}

      <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

  </body>

</html>